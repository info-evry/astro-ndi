let teamsSearchTerm = '';

function initTeamsSearch() {
  const searchInput = $('teams-search');
  if (searchInput) {
    searchInput.addEventListener('input', (e) => {
      teamsSearchTerm = e.target.value.toLowerCase();
      filterTeams();
    });
