---
import '../../design/src/index.css';
import associationInfo from '../../knowledge/src/association/info.json';
import ndiEvent from '../../knowledge/src/ndi/event.json';

interface Props {
  title: string;
  description?: string;
  image?: string;
  adminStyles?: boolean;
  showHeader?: boolean;
  showFooter?: boolean;
  noindex?: boolean;
}

const {
  title,
  description = `Inscription des équipes pour la ${ndiEvent.name} ${ndiEvent.year} - ${ndiEvent.edition}`,
  image = "/og-image.png",
  adminStyles = false,
  showHeader = true,
  showFooter = true,
  noindex = false
} = Astro.props;

const assoUrl = associationInfo.sites.asso.url;
const siteUrl = associationInfo.sites.ndi.url;
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const ogImageUrl = new URL(image, siteUrl).href;

