{
  "name": "ndi-registration",
  "version": "2.0.0",
  "description": "Team registration system for Nuit de l'Info - Astro + Cloudflare Workers + D1",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro build && wrangler dev",
    "deploy": "astro build && wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "db:init": "wrangler d1 execute ndi-db --local --file=./db/schema.sql",
    "db:seed": "wrangler d1 execute ndi-db --local --file=./db/seed.sql",
    "db:migrate": "wrangler d1 execute ndi-db --file=./db/schema.sql"
  },
  "keywords": ["astro", "cloudflare", "workers", "d1", "registration"],
  "author": "Guillaume Coquard",
  "license": "MIT",
  "dependencies": {
    "astro": "^5.1.1",
    "@astrojs/cloudflare": "^12.0.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "~0.5.0",
    "vitest": "~2.0.5",
    "wrangler": "^4.51.0"
  }
}
