{
  "name": "ndi-registration",
  "version": "1.0.0",
  "description": "Team registration system for Nuit de l'Info - Cloudflare Workers + D1",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "db:init": "wrangler d1 execute ndi-db --local --file=./db/schema.sql",
    "db:seed": "wrangler d1 execute ndi-db --local --file=./db/seed.sql",
    "db:migrate": "wrangler d1 execute ndi-db --file=./db/schema.sql"
  },
  "keywords": ["cloudflare", "workers", "d1", "registration"],
  "author": "Guillaume Coquard",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "~0.5.0",
    "vitest": "~2.0.5",
    "wrangler": "^4.51.0"
  }
}
